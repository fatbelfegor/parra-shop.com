<br><h2 class="text-center">Статусы наличия товара</h2><br>

<table class="table table-bordered table-striped text-center table-lh-34">
	<tr>
		<th>Название</th>
		<th>Цвет</th>
		<th>Действия</th>
	</tr>
	<% for stock in @stocks %>
	<tr>
		<td><b><%= stock.name %></b></td>
		<td><div style="width: 32px; height: 32px; border-radius: 50%; background: <%= stock.color %>"></div></td>
		<td>
			<%= link_to 'Редактировать', edit_stock_path(stock), class: 'btn btn-warning' %>
			<%= link_to 'Удалить', stock, 'data-confirm' => 'Вы уверены?', :method => :delete, class: 'btn btn-danger' %>
		</td>
	</tr>
	<% end %>
	<tr>
		<td colspan="3">
			<%= link_to 'Новый статус', new_stock_path, class: 'btn btn-success' %>
		</td>
	</tr>
</table>