<%= form_for(@stock) do |f| %>
<label class="row row form-group">
	<h4 class="col-md-2 col-md-offset-3 text-center">Название: </h4>
	<div class="col-md-3">
		<%= f.text_field :name, {class: 'form-control'} %>
	</div>
</label>
<label class="row row form-group">
	<h4 class="col-md-2 col-md-offset-3 text-center">Цвет: </h4>
	<div class="col-md-3">
		<%= f.text_field :color, {class: 'form-control', type: 'color'} %>
	</div>
</label>
<div class="text-center">
	<%= f.submit 'Сохранить', class: "btn btn-success" %>
</div>
<% end %>