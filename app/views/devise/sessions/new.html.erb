<br><h2 class="text-center">Вход</h2><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row form-group">
	<h4 class="col-md-4 text-right"><%= f.label :email, "E-mail:", {class: 'control-label wrath-content-box', style: 'padding:0 15px'} %></h4>
	<div class="col-md-4">
      <div class="wrath-content-box" style="padding:0 15px">
        <%= f.email_field :email, class: 'form-control', style: 'padding-top:0;padding-bottom:0', autofocus: true %>
      </div>
    </div>
</div>
<div class="row form-group">
    <h4 class=" col-md-4 text-right"><%= f.label :password, "Пароль:", {class: 'control-label wrath-content-box', style: 'padding:0 15px'} %></h4>
	<div class="col-md-4">
      <div class="wrath-content-box" style="padding:0 15px">
        <%= f.password_field :password, class: 'form-control', style: 'padding-top:0;padding-bottom:0', autocomplete: "off" %>
      </div>
    </div>
</div>
<div class="row form-group">
  <% if devise_mapping.rememberable? %>
  	<div class="text-center">
    	<small><%= f.check_box :remember_me %> <%= f.label :remember_me, "Запомнить меня" %></small>
    </div>
  <% end %>
<div class="text-center" style="margin: 30px 0">
<%= f.submit 'Войти', class: "btn btn-success" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
