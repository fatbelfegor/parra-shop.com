<div class="devise">
<h2 class="text-center">Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <label>Email: <%= f.email_field :email, autofocus: true %></label>
  <label>Пароль: <%= f.password_field :password, autocomplete: "off" %></label>
  <% if devise_mapping.rememberable? %>
    <div><%= f.check_box :remember_me %> Запомнить меня</div>
  <% end %>
<%= f.submit 'Войти'%>
<% end %>

<%= render "devise/shared/links" %>
</div>