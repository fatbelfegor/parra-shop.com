<% if product.delemiter?  && del != 'false'-%>
<div style="margin-bottom:10px;" id='product_<%= product.id %>'>
		<table  border="0" cellspacing="0" cellpadding="0" width="100%">
			<tr>
				<td valign="center" style="padding-left:10px;font-size:14px;background-color: #B5CEDC;width:100%;height:25px;"><b><%=product.name %></b></td>
			</tr>
			<% if current_user && current_user.admin? %>
				<tr>
					<td valign="right"><%= link_to 'show', "kupit/" + product.scode %> <%= link_to 'edit', edit_product_path(product) %> <%= link_to 'del', product, :confirm => 'Вы уверены?', :method => :delete %><b> №<%=product.position%></b></td>
				</tr>
			<% end %>
		</table>
<% else -%>
<div style="margin-bottom:10px;" id='product_<%= product.id %>'>
	<table border="0" cellspacing="0" cellpadding="0" width="100%">
		<tr>
			<td width="100px" height="100px" align="center" rowspan="3">
				
			</td>
			<td style="padding-left:10px;" align="left" colspan="2">
				<%= link_to product.name, "kupit/" + product.scode %>
					<% if current_user && current_user.admin? %>
						|<%= link_to 'show', "kupit/" + product.scode %> <%= link_to 'edit', edit_product_path(product) %> <%= link_to 'del', product, :confirm => 'Вы уверены?', :method => :delete %> <b>№<%=product.position%></b><%if product.invisible? -%> <span style="color: red;"><b>(Невидимый)</b></span<% end %>
					<% end %>
			</td>
		</tr>
		<tr>
			<td colspan="2" style="padding-left:10px;" align="left"><%= product.shortdesk %><br></td>
		</tr>
		<tr>
			<td style="padding-left:10px;" align="left"><span class="product_details"><%= link_to "Подробнее", "kupit/" + product.scode %></span></td>
			<td align="right">
				<span style="font-size:16px;"><b><%= number_to_currency(product.priceNew) %></b></span>
				<%= button_to_remote "Купить", :url => {:controller => :catalog, :action => :add_to_cart, :id => product.id}%>
			</td>
		</tr>
	</table>
<% end -%>
</div>
</br>