<div id="orderWindow">
  <div onclick="this.parentNode.style.display = 'none'"></div>
  <div>
    <div class="header">
      <h4>Отправьте Ваши контактные данные<br>и менеджер свяжется с Вами.</h4>
      <div style="background:url('/assets/remove-icon.png')" onclick="this.parentNode.parentNode.parentNode.style.display = 'none'"></div>
    </div>
    <%= form_for :order, {url: orders_path, html: {onsubmit: 'return orderValidate(this)'}} do |f| %>
    <div class="row">
    	<h4 class="col-md-5 text-right"><%= f.label :first_name, "Ваше имя:", {class: 'control-label wrath-content-box', style: 'padding:0 15px'} %></h4>
    	<div class="col-md-5">
	      <div class="wrath-content-box" style="padding:0 15px">
	        <%= f.text_field :first_name, class: "form-control" %>
	      </div>
	    </div>
	</div>
	<div class="row">
	    <h4 class="col-md-5 text-right"><nobr><%= f.label :phone, "Контактный телефон:", {class: 'control-label wrath-content-box', style: 'padding:0 15px'} %></nobr></h4>
    	<div class="col-md-5">
	      <div class="wrath-content-box" style="padding:0 15px">
	        <%= f.text_field :phone, class: "form-control" %>
	      </div>
	    </div>
    </div>
    <div class="checkbox">
	  <label>
	    <input type="checkbox" onclick="orderShowAll()">
	    <h4 class="text-left">Нужна доставка</h4>
	  </label>
	</div>
    <div id="otherInputs">
    	<div class="row">
    	<h4 class="col-md-5 text-right"><nobr><%= f.label :email, "Ваш e-mail:", {class: 'control-label wrath-content-box', style: 'padding:0 15px'} %></nobr></h4>
    	<div class="col-md-5">
	      <div class="wrath-content-box" style="padding:0 15px">
	        <%= f.text_field :email, class: "form-control" %>
	      </div>
	    </div>
	    </div>
	    <div class="row">
	    <h4 class="col-md-5 text-right"><nobr><%= f.label :addr_street, "Улица:", {class: 'control-label wrath-content-box', style: 'padding:0 15px'} %></nobr></h4>
    	<div class="col-md-5">
	      <div class="wrath-content-box" style="padding:0 15px">
	        <%= f.text_field :addr_street, class: "form-control" %>
	      </div>
	    </div>
	    </div>
	    <div class="row">
	    <h4 class="col-md-5 text-right"><nobr><%= f.label :addr_home, "Дом:", {class: 'control-label wrath-content-box', style: 'padding:0 15px'} %></nobr></h4>
    	<div class="col-md-5">
	      <div class="wrath-content-box" style="padding:0 15px">
	        <%= f.text_field :addr_home, class: "form-control" %>
	      </div>
	    </div>
	    </div>
	    <div class="row">
	    <h4 class="col-md-5 text-right"><nobr><%= f.label :addr_block, "Корпус:", {class: 'control-label wrath-content-box', style: 'padding:0 15px'} %></nobr></h4>
	    	<div class="col-md-5">
		      <div class="wrath-content-box" style="padding:0 15px">
		        <%= f.text_field :addr_block, class: "form-control" %>
		      </div>
	    </div>
	    </div>
	    <div class="row">
	    <h4 class="col-md-5 text-right"><nobr><%= f.label :addr_flat, "Квартира:", {class: 'control-label wrath-content-box', style: 'padding:0 15px'} %></nobr></h4>
