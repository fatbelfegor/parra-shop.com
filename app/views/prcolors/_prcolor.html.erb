<tr>
	<% if prcolor.textures.empty? %>
		<td><%= prcolor.name %></td>
	<% else %>
		<td onclick="showHideTextures(this)" class="catalog"><%= prcolor.name %> <img src="/assets/optionArrow.png"></td>
	<% end %>
	<td><%= number_to_currency(prcolor.price) %></td>
	<td>
		<%= link_to 'Удалить', prcolor, :confirm => 'Вы уверены?', :method => :delete, class: 'btn btn-danger' %>
		<%= link_to 'Редактировать', edit_prcolor_path(prcolor), class: 'btn btn-success' %>
	</td>	
</tr>
<% unless prcolor.textures.empty? %>
<tr class="showHide">
	<td colspan="3" class="tableOuter">
		<table>
			<% prcolor.textures.each do |t| %>
			<tr>
				<td><%= t.scode %> <%= t.name %></td>
				<td><%= number_to_currency(t.price) %></td>
				<td>
					<%= link_to 'Удалить', t, :confirm => 'Вы уверены?', :method => :delete, class: 'btn btn-danger' %>
					<%= link_to 'Редактировать', edit_texture_path(t), class: 'btn btn-success' %>
				</td>
			</tr>
			<% end %>
		</table>
	</td>
</tr>
<% end %>