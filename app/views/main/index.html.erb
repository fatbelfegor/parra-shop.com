<%= stylesheet_link_tag "main", media: "all" %>

<div class="home">
	<% unless @first_banners.blank? %>
	<div class="banners">
		<div id="slider"<% if @first_banners.size == 1 %> style='height: 360px'<% end %>>
			<div class="wrap">
				<% @first_banners.each_with_index do |b, i| %>
					<a href="<%= b.url %>" class="<%= 'active' if i == 0 %>" style="background-image: url('<%= b.image %>')"></a>
				<% end %>
			</div>
			<% unless @first_banners.size == 1 %>
				<div class="buttons">
					<div class="active" onclick="sliderChoose(this)"></div>
