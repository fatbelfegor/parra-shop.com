<div class="home">
	<% unless @banners.blank? %>
	<div class="banners">
		<div id="slider">
			<div class="prev" onclick="sliderPrev(this)"></div>
			<div class="wrap">
				<% @banners.each_with_index do |b, i| %>
					<a href="<%= b.url %>" class="<%= 'active' if i == 0 %>" style="background-image: url('<%= b.image %>')"></a>
				<% end %>
			</div>
			<div class="next" onclick="sliderNext(this)"></div>
			<div class="buttons">
				<div class="active" onclick="sliderChoose(this)"></div>
				<% (@banners.count - 1).times do %>
					<div onclick="sliderChoose(this)"></div>
				<% end %>
			</div>
		</div>
	</div>
	<% end %>

	<table border="0" cellspacing="0" cellpadding="0" width="90%">
		<tr>
			<td class="opacity">
				<%= link_to(image_tag("sales.jpg", :style => "margin-bottom:30px"), '/catalog/sales' )%>
			</td>
		</tr>
	</table>
	<table border="0" cellspacing="0" cellpadding="0" width="90%">
		<tr>
			<td class="opacity">
				<%= link_to(image_tag("JimiAkciaMiro.png", :style => "margin-bottom:30px"), '/catalog/index?category_scode=Miro' )%>
			</td>
		</tr>
	</table>

