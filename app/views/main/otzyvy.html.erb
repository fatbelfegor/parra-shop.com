<% for comment in Comment.where(published: true).order created_at: :desc %>
	<div class='otzyv'>
		<div class='header'><%= comment.title %></div>
		<div class='body'><%= comment.body %></div>
		<div class='bottom'>
			<div class='name'><%= comment.author %></div>
			<div class='date'><%= comment.created_at.strftime "%Y-%m-%d" %></div>
		</div>
	</div>
<% end %>
