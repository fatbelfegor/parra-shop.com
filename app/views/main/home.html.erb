<link rel="stylesheet" type="text/css" href="/assets/home.css">

<div id="home">
	<% banners = Banner.all %>
	<% b = banners.find_all(&:first) %>
	<% if b.any? %>
		<div class="main-slider">
			<% for banner in b %>
				<a href="<%= banner.url %>"><img src="<%= banner.image %>"></a>
			<% end %>
		</div>
	<% end %>

	<div class="icons">
		<a href="/service"><img src="/assets/Transport.png"><p>Бесплатная доставка</p></a>
		<a href="/service"><img src="/assets/Tools.png"><p>Сборка</p></a>
		<a href="/oplata"><img src="/assets/Payment.png"><p>Способы оплаты</p></a>
		<a href="/insurance"><img src="/assets/Certificate.png"><p>Гарантии</p></a>
		<a href="/stores"><img src="/assets/Shop.png"><p>Магазины</p></a>
	</div>

	<% b = banners.find_all(&:new) %>
	<% if b.any? %>
		<h2>Новинки</h2>
		<div class="categories">
			<% for banner in b %>
				<a href="<%= banner.url %>"><img src="<%= banner.image %>"></a>
			<% end %>
		</div>
	<% end %>

	<% comments = Comment.where(published: true).order date: :desc %>
	<div class="white">
		<h2>Отзывы наших покупателей</h2>
		<div class="reviews">
			<% for comment in comments %>
				<div class="item">
					<div class="text"><%= comment.body.truncate 220 %></div>
					<% if comment.date %><div class='date'><%= comment.date.strftime "%d-%m-%Y" %></div><% end %>
					<div class="author"><%= comment.author %><% unless comment.city.blank? %>, <%= comment.city %><% end %></div>
				</div>
			<% end %>
		</div>
		<div style="text-align: center; padding: 20px 0">
			<div class="btn gray" onclick="otzyv()"><p>Оставить отзыв</p></div>
		</div>
	</div>

	<% b = banners.find_all(&:hit) %>
	<% if b.any? %>
		<h2>Хиты продаж</h2>
		<div class="categories">
			<% for banner in b %>
				<a href="<%= banner.url %>"><img src="<%= banner.image %>"></a>
			<% end %>
		</div>
	<% end %>

	<div id="info">
		<h1>Мебель из шпона</h1>
