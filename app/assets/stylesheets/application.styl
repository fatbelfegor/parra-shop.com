@import 'admin/mixins'

@import url('http://fonts.googleapis.com/css?family=Exo+2')

*
	font-family Verdana
	font-style normal
	padding 0
	margin 0

html, body
	height 100%
	background-color white

a
	color inherit
	text-decoration none

li
	list-style-type none

.hidden
	display none !important
	
.row
	display table
	> *
		display table-cell
		vertical-align top

#header
	position relative
	height 87px
	border-bottom 1px solid #C6C6C6
	.logo
		position absolute
		left 19px
		img
			width 200px
			height 84px
	#search
		position absolute
		right 300px
		top 18px
		font-size 0
		input[type=text]
			width 200px
			font-size 13px
			border 1px solid #C6C6C6
			border-width 1px 0 1px 1px
			padding 5px 0 5px 10px
			border-radius(5px 0 0 5px)
		input[type=text]:focus
			border-color #4FB859
			outline 0
		input[type=submit]
			font-size 13px
			border 1px solid #4FB859
			padding 5px 10px
			background-image url("/assets/buyButton.png")
			color white
			border-radius(0 5px 5px 0)
	.phone
		position absolute
		right 60px
		top 12px
		p
			color #5A585B
			font-size 23px
		ins
			font-size 13px
			color #4EBA6F
			margin-top -4px
			margin-left 2px
			display block
			text-decoration none
			border-bottom 1px solid #5AC67B
			float left
#menu
	color #58585A
	padding 52px 40px 0 0
	text-align right
	font-size 0
	> div
		font-size 13px
		display inline-block
		vertical-align top
		> p, > a
			display block
			padding 13px 18px 6px
			text-transform uppercase
			transition(.3s)
		> p:hover, > a:hover
			color #52B84A
			text-decoration underline
		.background
			height 0
			overflow hidden
			position absolute
			top 88px
			left 0
			right 0
			transition(.3s)
			div
				width 100%
				height 100%
				background-size 100% 450px
				display none
			.active
				display block
		.categories
			position relative
			z-index 1
			margin-top 2px
			height 0
			overflow hidden
			line-height 25px
			text-align center
			background-color rgba(255, 255, 255, 0.8)
			transition(.3s)
			a:first-child
				margin-top 25px
			a
				display block
			a:hover
				color #52B84A
	.catalog:hover
		.background, .categories
			height 450px
	.all-products
		.background
			background-color #E6E6E6
			text-align center
		a
			display inline-block
			margin 15px 30px
			vertical-align top
			font-size 15px
			font-weight normal
			border-left 4px solid #58575C
			padding-left 10px
			width 85px
			transition(0.3s)
		a:hover
			color #52B84A
	.all-products:hover
		.background
			height 94px
			border-bottom 1px solid #C6C6C6
	.wherebuy
		.background
			background-color #E6E6E6
			text-align center
			a
				display inline-block
				width 165px
				height 170px
				font-size 14px
				padding 0 30px 0 25px
				border-left 5px solid red
				margin-bottom 55px
				vertical-align top
				line-height 26px
				color #535356
				margin-right 5px
				transition(.3s)
			a:hover
				color black
	.wherebuy:hover
		.background
			padding-top 35px
			height 440px
			border-bottom 1px solid #C6C6C6
			
#main
	position absolute
	width 100%
	top 88px
	bottom 40px
	overflow auto
	z-index 0
	> div
		width 1000px
		margin 0 auto
		height 100%

#footer
	position absolute
	bottom 0
	width 100%
	text-align center
	background-color #E6E6E6
	color #58585A
	a
		margin 0 15px
		line-height 40px
		font-size 13px
		transition(.3s)
	a:hover
		color #52B84A
		text-decoration underline