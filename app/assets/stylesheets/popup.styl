#popupContainer
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	display none
	align-items center
	justify-content center
	&.active
		background rgba(0, 0, 0, .5)
	> *
		background white
		border-radius 4px
		position relative
		max-height 100%
		overflow auto
	.close
		width 23px
		height 23px
		background #969696
		position absolute
		top 12px
		right 11px
		color white
		text-align center
		line-height 23px
		border-radius 50%
		cursor pointer
	> .success
		padding 30px 50px
		box-shadow 0 5px 30px rgba(0, 0, 0, .3)
		
#popupCart
	.title
		color #535459
		font-size 24px
		padding 22px 0 35px
		text-align center
		line-height 1
	.total
		line-height 1
		padding 31px 53px 25px 0
		font-size 15px
		font-weight bold
		text-align right
		white-space nowrap
		img
			position relative
			top 2px
	.buttons
		display flex
		justify-content space-between
		padding 0 21px 30px
		.btn
			text-align center
			line-height 31px
			height 31px
			border 1px solid
			border-radius 4px
			font-size 15px
			padding 0 80px
			transition .3s
			&:hover
				box-shadow 0 1px 7px rgba(0, 0, 0, .2)
			&.green
				text-shadow 1px 1px 2px rgba(0, 0, 0, .3)
				color white
				background #7ab652 linear-gradient(#85d248, #7ab652)
				border-color #79b551
			&.white
				color black
				background #f0f0f0 linear-gradient(#fff, #f0f0f0)
				border-color #9a9a9a
				
#popupOrderProject
	header
		padding 18px 25px 15px
		text-align center
	hr
		margin 0 23px
		border-width 1px 0 0
	.title
		font-size 1.5rem
		margin-bottom 6px
	.subtitle
		font-size .9rem
	.list
		padding 26px 0 0
		margin 0 25px
		font-size .9rem
		.item
			margin-bottom 12px
			display flex
		.input
			padding-right 10px
			align-self center
		.color
			width 5px
		.red
			background #ed1c24
		.gray
			background #8a8c8e
		.green
			background #4aa147
		.blue
			background #0054a6
		.orange
			background #f7941e
		p
			padding-left 16px
			line-height 1.2
			img
				display inline-block
				margin 0 5px
	.form
		padding 15px 0 0
		.input
			display block
			width 380px
			margin 0 auto
			span
				display block
				line-height 38px
			input
				padding 0 10px
				line-height 31px
				border 1px solid #a2a2a2
				box-sizing border-box
				border-radius 3px
				width 100%
				&.short
					width 160px
		.hint
			width 380px
			margin 0 auto
			font-size .8rem
			padding 10px 0 18px
	.submit
		display block
		padding 27px 0
		text-align center
		input
			display none
	.btn.white
		color #000
		background #f0f0f0 linear-gradient(#fff, #f0f0f0)
		border-color #9a9a9a
		padding 6px 54px