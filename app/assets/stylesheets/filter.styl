#catalogFilter
	display table
	width 100%
	margin-top 31px
	white-space nowrap
	border 1px solid #d3d3d3
	border-width 0 0 0 1px
	> div
		display table-cell
		width 193px
		border 1px solid #d3d3d3
		border-width 1px 1px 1px 0
		height 33px
		line-height 33px
		position relative
		background #f2f2f2
		> b
			display block
			text-align center
			cursor pointer
			font-size 14px
			position relative
			z-index 50
			padding 0 15px
		> div
			position absolute
			left -1px
			top 100%
			background white
			z-index 51
			color #59595b
			min-width 100%
			margin-top 1px
		.checkboxes
			padding 0 0
			label
				padding 0 13px
				display block
				line-height 33px
				height 0
				overflow hidden
				font-size 14px
				input
					margin 10px 12px 0 0
					float none
					display inline-block
		.range
			padding 0 13px
			height 0
			overflow hidden
			.inputs
				display table
				width 100%
				color #7a7a7c
			label
				display table-cell
				vertical-align top
				width 50%
				padding 0 17px 0 0
				font-size 14px
				line-height 42px
				& + label
					padding 0 0 0 17px
				span
					display block
					line-height 1
				input
					width 100%
					box-sizing border-box
					padding 0 0 0 5px
					border 1px solid #d5d5d5
					line-height 23px
					border-radius 3px
					margin 10px 0 18px
		.btn
			background #726658
			border 1px solid #615650
			border-width 0 1px
			line-height 33px
			color white
			text-align center
			display block
			padding 0
			border-radius 0
			height 0
			overflow hidden
			position absolute
			left 13px
			right 13px
			bottom 0
		&.active
			border-bottom-color white
			> b
				background white
				z-index 52
			> div
				border 1px solid #d4d4d4
				margin-top -1px
			.checkboxes
				padding 12px 0 57px
				label
					padding 0 13px
					height 42px
			.range
				padding 19px 13px 12px
				height 107px
			.btn
				height 33px
				margin 5px 0 0
				border-width 1px
				bottom 12px
	> .clear
		background #726658
		color white
		text-align center
		cursor pointer
		border-color #61574e
		img
			display inline-block
			margin-right 10px
			position relative
			top 3px
			
#catalogFilterClose
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	z-index 50
	display none
	
@media (max-width 875px)
	#catalogFilter
		margin-top 26px
		display flex
		flex-wrap wrap
		justify-content center
		border 0
		> div
			margin 5px
			border-width 1px
	
@media (max-width 700px)
	#catalogFilter
		> div
			line-height 42px
			height 42px
			.range
				label
					input
						height 32px
						line-height 32px
			&.active
				.btn
					height 42px
					line-height 42px
				.range
					height 127px
	
@media (max-width 500px)
	#catalogFilter
		> div
			margin-left 0
			margin-right 0
			width 228px
			&:nth-child(even)
				margin-left 10px