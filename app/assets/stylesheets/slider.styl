@import 'admin/mixins'

.banners
	margin 30px 0 43px
	position relative
#slider
	height 328px
	.prev, .next
		position absolute
		left 8px
		top 156px
		cursor pointer
		background-image url('/assets/arrowLeft.png')
		width 12px
		height 22px
	.next
		left auto
		right 8px
		background-image url('/assets/arrowRight.png')
	.wrap
		overflow hidden
		position relative
		height 300px
		a
			display inline-block
			position absolute
			left 100%
			right -100%
			height 100%
			background-repeat no-repeat
			background-position center
			background-size contain
		a:first-child
			left 0
			right 0
	.buttons
		position absolute
		bottom 9px
		width 100%
		text-align center
		font-size 0
		div
			display inline-block
			width 8px
			height 8px
			border-radius(4px)
			background-color #aaa
			box-shadow(inset 0 0 4px black)
			margin 0 4px
			cursor pointer
			transition(.5s)
		div:hover, .active
			background-color #81C0EB