@keyframes animation-notify {
  0% {
  	opacity: 0;
  	transform: scale3d(.3, .3, .3);
  }
  30% {
  	opacity: 1;
  	top: 30px;
  	transform: scale3d(1, 1, 1);
  }
  90% {
  	opacity: 1;
  	top: 30px;
  	transform: scale3d(1, 1, 1);
  }
  100% {
  	opacity: 0;
  	top: -30px;
  	transform: scale3d(.3, .3, .3);
  }
}

@keyframes spin {
  0% {
  	transform(rotate(0deg))
  }
  50% {
  	transform(rotate(180deg))
  }
  100% {
  	transform(rotate(360deg))
  }
}

