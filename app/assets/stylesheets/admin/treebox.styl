@import "mixins"

.treebox
	cursor pointer
	position relative
	z-index 2 !important
	> ul
		position absolute
		top 100%
		left 0
		min-width 100%
		margin-left -1px
		margin-bottom 30px
	ul
		background-color white
		transition(.3s)
	li
		list-style none
		text-align left
		line-height 32px
		color #333
		position relative
		min-width 120px
		font-size 14px
		font-weight normal
		text-shadow(none)
		transition(.3s)
		p
			padding-right 12px
			white-space nowrap
			span
				display inline-block
				padding 0 12px
			span + span
				border-left 1px solid #bbb
			span:first-child
				padding-left 0
			span:last-child
				padding-right 0
		> i, > p
			height 0
			overflow hidden
			transition(.3s)
		i
			text-align center
			line-height 32px
			display block
			position absolute
			top 0
			left 0
			border-right 1px solid #bbb
			background-color #C0FFEE
			width 0
			overflow hidden
			margin 0 !important
			box-shadow(inset 0 0 10px #87D5FD)
			transition(.3s)
		i + i
			left 33px
	li i:hover, li.active > i, i.active
		color white
		background-color #00A8FF
		box-shadow(inset 0 0 10px #005AFF)
	li.group
		color white
		border-color #222 !important
		text-align center
		margin-bottom 0
		text-shadow(0 1px 3px black)
		btn-gradient(#444, #777, #555, #333, #444)
		p
			padding 0 !important
.treebox.default
	> p
		background white
	> p.active
		background-color #C0FFEE
		box-shadow(inset 0 0 10px #87D5FD)
.treebox.active
	z-index 3 !important
	> ul, li.open > ul
		border 1px solid #bbb
		box-shadow(0 0 12px #aaa)
	li.open
		> p
			border-bottom 1px solid #bbb
		> ul
			margin -1px 20px 10px
			transition(.3s)
		> ul:nth-child(3)
			margin-top 5px
	> ul > li, li.open > ul > li
		border-bottom 1px solid #bbb
		> p
			padding-left 40px
		> i + i + p
			padding-left 77px
		> i, > p
			height 32px
		i
			width 32px
	> ul > li:last-child, li.open > ul > li:last-child
		border-bottom 0