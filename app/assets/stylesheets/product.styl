@import 'mixins'

.product-wrap
	display table
	width 100%
	> div
		display table-cell
		vertical-align top
		position relative
	.mini
		max-width 472px
		margin 20px auto
		@media (max-width 505px)
			max-width 325px
		@media (max-width 360px)
			max-width 147px
		.item:focus
			outline 0
		img
			width 145px
			height 145px
			border 1px solid #ccc
			&.active
				border-color #f60
		.slick-arrow
			font-size 0
			position absolute
			top 50%
			width 8px
			height 14px
			margin-top -7px
			border 0
			padding 0
			cursor pointer
			&:focus
				outline 0
		.slick-prev
			left 0
			background-image url("/assets/productMiniPrev.png")
		.slick-next
			right 0
			background-image url("/assets/productMiniNext.png")
	.photoes
		a
			display none
		.active
			display block
		img
			width 492px
			display block			

.productContent
	width 100%
	position relative
	padding-left 32px
	h1
		font-size 16px
		color black
		margin-bottom 35px
		font-weight bold
		color black
	> p
		color #58585A
		font-size 13px
		b
			margin-right 5px
			color black
	> :last-child
		color black
		font-weight bold
		font-size 15px
		margin-bottom 20px
		

.others
	border-top 1px solid black
	border-bottom 1px solid black
	> p
		color #59595B
		font-size 16px
		line-height 46px
		padding-left 5px
		z-index 1
		margin-bottom -20px
	.wrap
		overflow auto
		padding 20px 0 80px
		margin-bottom -30px
		.table
			width 100%
			font-size 0
			> div
				display inline-block
				width 18%
				min-width 150px
				color #59595B
				text-align center
				height 100%
				position relative
				border 1px solid transparent
				vertical-align top
				padding 10px 10px 0
				line-height 1.5
				margin-bottom 10px
				.appear
					margin 0
					position absolute
					background white
					border 1px solid transparent
					border-top 0
					left -1px
					right -1px
					padding 0 10px
					div
						height 0
						overflow hidden
						transition(.3s)
					.fancyButton
						float none
						display inline-block
						border 0 solid #A6A6A6
						transition(.3s)
				.left, .right
					top 62px
					margin 0
					position absolute
					display none
					cursor pointer
					z-index 5
				.left
					left 20px
					width 28px
					height 28px
					background-image url(/assets/left.png)
				.right
					right 20px
					width 28px
					height 28px
					background-image url(/assets/right.png)
				.left.inactive
					background-image url(/assets/leftInactive.png)
				.right.inactive
					background-image url(/assets/rightInactive.png)
				.photoes
					margin 0
					a
						display none
						img
							width 150px
							height 150px
					.showPhoto
						display block
				div
					a
						display block
						width 100%
						font-size 14px
					b, span
						font-size 12px
			> div:hover
				border-color #ccc
				z-index 10
				.appear
					border-color #ccc
					div
						height 24px
					.fancyButton
						height 19px
						border-width 1px
						margin 10px 0 5px
				.left, .right
					display block
		
@media (max-width 1000px)
	.product-wrap
		> div
			display block
		.productContent
			padding 20px 0 0 0
			width auto
		.photoes
			img
				margin 0 auto
				width auto
				max-width 100%
				
#product-page
	.header
		border-top 1px solid #cecece
		color black
		padding 24px 0
		font-size 26px
		font-weight bold
	.tabs
		border 1px solid #C3C3C4
		font-size 0
		div
			border-right 1px solid #C3C3C4
			width 187px
			background-color #E8E8E8
			font-size 13px
			color #292929
			line-height 36px
			font-weight bold
			text-align center
			display inline-block
			cursor pointer
		.active
			background-color white
	.tabs-pages
		margin-bottom 10px
		user-select(none)
		> div
			padding 4px 15px 3px
			margin-top -1px
			border 1px solid #C3C3C4
			display none
		> div.active
			display block
		.textures
			width 100%
			font-size 0
			transition(.3s)
			> div
				height 0
				overflow hidden
				width 120px
				display inline-block
				transition(.3s)
				p
					font-size 11px
					color black
					margin 0 0 10px
					text-align center
					white-space nowrap
				.texture-image
					display block
					width 100%
					height 60px
					> img
						display block
						width 60px
						height 100%
						margin 0 auto
						border-radius(30px)
		.checkbox
			display block
			width 14px
			height 14px
			background-image url('checkbox.png')
			background-size 100% 100%
			cursor pointer
			margin 7px 0 0 13px
			min-height auto
			padding-left 0
		.color .checkbox
			display inline-block
			margin-top 22px
		.color i
			display inline-block
			margin-top 22px
		.checked
			background-image url('checkbox-checked.png')
		.color, .catalog
			margin 11px 0 12px
		.color, .catalog > div
			> *
				display inline-block
				vertical-align top
			a img
				height 57px
				margin-right 16px
			> p
				line-height 57px
				font-size 13px
				font-weight bold
				color #292929
			.color-down, .color-up
				background-image url('color-down.png')
				width 14px
				height 12px
				background-repeat no-repeat
				background-position 3px 3px
				border 1px solid #7B7B7B
				margin 23px 0 0 8px
			.color-up
				background-image url('color-up.png')
				background-position 4px 3px
		.catalog
			> div
				cursor pointer
			.open + .textures
				margin 11px 0 7px
				> div
					margin 5px 0
					height 107px
		.prsizes, .proptions
			padding 30px 0 5px 30px
			.checkbox
				display inline-block
				position relative
				top 1px
				margin 0 13px 0 0
			> div
				font-size 13px
				color black
				font-weight bold
				margin-bottom 18px
		.size
			display none
		.cur
			display block
			.hint
				padding 20px