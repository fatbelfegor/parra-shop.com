@import 'mixins'

.product-wrap
	display table
	width 100%
	> div
		display table-cell
		vertical-align top
		position relative
	> :first-child
		.mini
			padding 23px 11px
			width 472px
			overflow hidden
			position relative
			.prev, .next
				width 8px
				height 100%
				position absolute
				top 0
				background-color white
				background-repeat no-repeat
				background-position center
				cursor pointer
				z-index 1
			.prev
				left 0
				background-image url('/assets/productMiniPrev.png')
			.next
				right 0
				background-image url('/assets/productMiniNext.png')
			.wrap
				width 10000px
				font-size 0
				position relative
				left 0
				div
					display inline-block
					border 1px solid #ccc
					width 143px
					height 143px
					margin-right 18px
					cursor pointer
					background-size contain
					background-position center
					background-repeat no-repeat
				.active
					border-color #f60
		.photoes
			a
				display none
			.active
				display block
			img
				width 492px
				display block
					
.productContent
	width 100%
	position relative
	padding-left 32px
	h1
		font-size 16px
		color black
		margin-bottom 35px
		font-weight bold
		color black
	> p
		color #58585A
		font-size 13px
		b
			margin-right 5px
			color black
	> div, > .prsize-wrap > div > div
		a
			cursor pointer
			font-size 13px
			color black
			font-weight bold
			display block
			line-height 25px
			height 25px
			padding-right 32px
			transition(0.3s)
			img
				position relative
				top 4px
				left 10px
		a:hover
			color #52B84A
		> .option
			display none
			label
				display block
				margin-top 10px
				min-height 26px
				input, a, span
					display inline-block
					vertical-align middle
					cursor pointer
				a
					margin-left 10px
					height 100%
					padding 0
				img
					top 0; left 0
					height 100%
				span
					width 202px
					margin 0 0 0 22px
					color #575759
					vertical-align top
					font-size 15px
			.color
				height 66px
				width 405px
				> span
					vertical-align middle
					width 162px
			.catalog
				margin 10px 0
				.header
					height 58px
					.heading
						height 52px
						float left
						margin-right 16px
						background-size 100% 100%
						padding 5px 8px 0 8px
						width 140px
						p
							display block
							width 100%
							font-size 15px
							color white
							font-weight bold
							line-height 22px
					.fancyButton
						margin-top 40px
				.textures
					font-size 10px
					overflow hidden
					label
						width 96px
						height 115px
						margin-top 16px
						display inline-block
						margin-right 10px
						p
							width 100%
							white-space nowrap
							text-align center
						a
							display block
							margin 10px 17px
							width 62px
							height 62px
							padding 0
						img
							margin 0
							top 0; left 0
							width 100%
							height 100%
							border-radius(31px)
						input
							width 100%
							margin-top 4px
	> .prsize-wrap
		margin 0
		> div > div
			display none
	> .prsize-wrap > .active > div
		display block
	> :last-child
		color black
		font-weight bold
		font-size 15px
		margin-bottom 20px
		

.others
	border-top 1px solid black
	padding-bottom 40px
	border-bottom 1px solid black
	margin-bottom 50px
	> p
		color #59595B
		font-size 16px
		line-height 46px
		padding-left 5px
		z-index 1
		margin-bottom -20px
	.wrap
		display table
		width 100%
		margin-top 20px
		> div
			display table-cell
			width 20%
			color #59595B
			text-align center
			height 100%
			position relative
			border 1px solid transparent
			vertical-align top
			padding 10px 10px 0
			line-height 1.5
			.appear
				margin 0
				position absolute
				background white
				border 1px solid transparent
				border-top 0
				left -1px
				right -1px
				padding 0 10px
				div
					height 0
					overflow hidden
					transition(.3s)
				.fancyButton
					float none
					display inline-block
					border 0 solid #A6A6A6
					transition(.3s)
			.left, .right
				top 62px
				margin 0
				position absolute
				display none
				cursor pointer
			.left
				left 20px
				width 28px
				height 28px
				background-image url(/assets/left.png)
			.right
				right 20px
				width 28px
				height 28px
				background-image url(/assets/right.png)
			.left.inactive
				background-image url(/assets/leftInactive.png)
			.right.inactive
				background-image url(/assets/rightInactive.png)
			.photoes
				margin 0
				a
					display none
					img
						width 150px
						height 150px
				.showPhoto
					display block
			div
				a
					display block
					width 100%
					font-size 14px
				b, span
					font-size 12px
		> div:hover
			border-color #ccc
			.appear
				border-color #ccc
				div
					height 24px
				.fancyButton
					height 19px
					border-width 1px
					margin 10px 0 5px
			.left, .right
				display block