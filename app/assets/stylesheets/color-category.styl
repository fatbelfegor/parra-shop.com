@import 'mixins'

#color-category-blocks
	padding-top 15px
	font-size 0
	.wrap
		display flex
		flex-wrap wrap
		justify-content center
		.item
			width 50%
			margin 0 54px
			box-sizing border-box
			width 446px
			height 165px
			flex-shrink 1
			min-width 300px
			backgoround-position center
			background-size cover
			margin-bottom 30px
		a
			text-decoration none
			.appear
				width 100%
				height 100%
				background-color rgba(71, 71, 71, .6)
				position relative
				div
					position absolute
					top 50%
					left 78px
					margin-top -32px
					font-size 20px
					color white
					text-align center
					line-height 25px
					text-shadow(1px 1px 3px #104809)
					span
						border-bottom 1px solid white