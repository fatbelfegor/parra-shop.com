@import 'mixins'

#color-category-blocks
	font-size 0
	.item
		display inline-block
		vertical-align top
		width 446px
		height 165px
		backgoround-position center
		background-size cover
		margin-bottom 30px
		&:nth-child(odd)
			margin-right 108px
	a
		text-decoration none
		.appear
			width 100%
			height 100%
			background-color rgba(0, 160, 16, .4)
			position relative
			div
				position absolute
				top 50%
				left 78px
				margin-top -32px
				font-size 20px
				color white
				text-align center
				line-height 25px
				text-shadow(1px 1px 3px #104809)
				span
					border-bottom 1px solid white