#cartNav
	display flex
	margin 0 3%
	border 1px solid #9b9b9b
	height 31px
	line-height 31px
	background linear-gradient(white, #efefef)
	text-align center
	div
		flex-grow 1
		position relative
		&:after
			content ''
			position absolute
			display block
			right -13px
			top 0
			width 13px
			height 31px
			background url('/assets/cart/nav-triangle.png')
		&:last-child:after
			display none
	.active
		background #c4c4c4
		text-shadow 1px 1px 1px rgba(255, 255, 255, .5)
		&:after
			width 0
			height 0
			right -10px
			top 0
			border-style solid
			border-color transparent #c4c4c4
			border-width 15.5px 0 15.5px 11px
			background none
			
.cart-pages
	> div
		display none
	> .active
		display block
	#cartList
		margin 59px 3% 0
		position relative
		overflow visible
		max-height none
		.item:first-child
			&:before, &:after, .counter:before
				display block
				position absolute
				top -25px
				color black
				font-size 15px
				line-height 1
				font-weight bold
			&:before
				content 'Товары'
				left 66px
			&:after
				content 'Стоимость'
				right 28px
			.counter:before
				content 'Количество'
				margin-left 3px
	.total
		line-height 1
		padding 31px 28px 2px
		font-size 15px
		font-weight bold
		text-align right
		white-space nowrap
		margin 0 3%
		img
			position relative
			top 2px
		i
			font-style normal
			color #979797
			padding-right 18px
			font-weight normal
	.buttons
		display flex
		justify-content space-between
		margin 31px 3% 38px
		.btn
			text-align center
			line-height 31px
			height 31px
			border 1px solid
			border-radius 4px
			font-size 15px
			padding 0 80px
			transition .3s
			&:hover
				box-shadow 0 1px 7px rgba(0, 0, 0, .2)
			&.green
				text-shadow 1px 1px 2px rgba(0, 0, 0, .3)
				color white
				background #7ab652 linear-gradient(#85d248, #7ab652)
				border-color #79b551
			&.white
				color black
				background #f0f0f0 linear-gradient(#fff, #f0f0f0)
				border-color #9a9a9a
	.columns
		display flex
		margin 0 3%
		font-size 14px
		border-bottom 1px solid #cecece
		> div
			width 33.3%
		> :last-child
			text-align right
		.title
			font-weight bold
			color black
			padding 25px 0 15px
			text-align center
	.field
		display block
		.name
			color #636363
			padding 11px 0
		input
			height 31px
			line-height 31px
			color black
			border 1px solid #a2a2a2
			padding 0 12px
			border-radius 3px
			box-sizing border-box
			width 100%
		.error
			font-size 12px
			color red
			padding-top 3px
			display none
	.row
		.field
			display inline-block
			width 43%
			&:first-child
				margin-right 14%
	.hint
		padding 30px 0 20px
		color #636363
	.total-info
		line-height 18px
		color #363636
		background #e8e8e8
		border 1px solid #a0a0a0
		padding 25px 28px
		white-space nowrap
		display inline-block
		text-align left
		position relative
		margin-top 100px
		border-radius 3px
		span, b
			padding-left 23px
		&:before
			content 'Инфорормация о заказе'
			display block
			position absolute
			font-weight bold
			color black
			padding 25px 0 15px
			text-align center
			top -100px
			left 0
			right 0
			text-align center
	.radios
		padding-top 35px
		text-align left
		.info
			margin 12px 0 21px 61px
			padding-left 25px
			color #979797
			cursor pointer
			height 18px
			line-height 1
			background url('/assets/icon/info.png') top left no-repeat
			span
				border-bottom 1px dashed #979797
	.radio
		display block
		padding-left 28px
		position relative
		margin-left 36px
		cursor pointer
		& + .radio
			margin-top 33px
		img
			position absolute
			left 0
			top 3px
		span :last-child
			display none
		input
			display none
			&:checked + span
				:first-child
					display none
				:last-child
					display block
	blockquote
		margin 6px 3% 47px
		border-left 6px solid #c4c4c4
		color #343434
		padding 0 18px
		font-size 15px
		color black