@import 'mixins'

.footer
	font-size 13px
	font-weight bold
	color #f1f1f1
	text-align center
	background #2b2b2b
	padding 0 3%
	ul
		font-weight bold
		padding 13px 0
		li
			margin 0 15px
			display inline-block
			a
				margin 0
				height 34px
				line-height 34px
				display block
				white-space nowrap
				position relative
				text-transform uppercase
	.table
		width 100%
		display table
		> div
			display table-cell
			vertical-align top
	.content
		font-size 14px
		line-height 18px
		padding-top 15px
		// .title
		// 	text-transform uppercase
		.left
			padding 0 20px 0 0
			text-align left
			p
				margin 10px 0 38px
				font-size 1.1em
			img
				display block
				margin 20px 0 29px
			.pdf
				display block
				font-size .9rem
				text-decoration underline
				margin-bottom 20px
			.sale
				font-size 22px
				font-weight bold
				color #2c2c2c
				background white
				height 35px
				line-height 35px
				padding 0 13px
				text-transform uppercase
				border-radius(4px)
				transition(.3s)
				&:hover
					box-shadow(0 0 10px white)
		.center
			text-align center
			.borders
				padding 0 20px
				border 1px solid #626262
				border-width 0 1px
				margin-top 11px
				line-height 28px
				> a
					display block
					&:last-child
						margin-top 8px
				.credit, .social
					white-space nowrap
				.credit
					margin 14px 0 4px
					a
						vertical-align top
						display inline-block
						& + a
							margin-left 23px
							position relative
							top -3px
				.social
					margin 12px 0 3px
					img
						width 33px
		.right
			width 40%
			text-align right
			.addresses
				line-height 17px
				margin-top 15px
				padding-left 20px
	.copy
		height 28px
		font-size 12px
		padding 10px 0
		
	@media (max-width 850px)
		.content
			display block
		.content
			.left-and-center
				width auto
				display block
				padding-right 50px
			.center
				.borders
					padding-right 0
					border-right 0
			.right
				width auto
				text-align left
				display block
				padding-top 30px
				padding-left 50px
				.addresses
					padding-left 0
					
	@media (max-width 500px)
		.content
			.left-and-center
				padding-right 0
				> .table > div
					display block
					width auto
			.left, .center
				padding 0 50px
			.left
				padding-bottom 30px
				text-align center
				img
					margin-right 0
					display inline-block
				p
					margin 10px 0 20px
			.center
				.borders
					padding 0
					border-left 0
			.right
				text-align center