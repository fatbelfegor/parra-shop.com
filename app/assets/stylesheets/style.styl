@import 'mixins'

#blur
	-webkit-filter blur(0px)
	filter blur(0px)
	transition(1s)
	&.active
		-webkit-filter blur(3px)
		filter blur(3px)

#dark
	position fixed
	top 0
	left 0
	height 100%
	width 100%
	z-index 100
	display none
	color #333
	.bg
		display block
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		background -webkit-radial-gradient(transparent, rgba(0, 0, 0, .6));
		background radial-gradient(transparent, rgba(0, 0, 0, .6));
	> div
		display none
		position absolute
		top 50%
		left 50%
		background-color white
		box-shadow(2px 4px 16px #333)
		.header
			line-height 32px
			border 1px solid #aaa
			border-width 1px 0
			background-color #fffdad
			font-weight bold
			text-align center
	.otzyv
		margin-top -225px
		margin-left -225px
		width 450px
		height 450px
		.title
			font-size 24px
			color #4FB859
			line-height 48px
			font-weight bold
			text-align center
			margin-bottom 5px
		label
			display block
			margin-bottom 10px
			height 36px
			p
				position absolute
				left 30px
				line-height 36px
			input
				position absolute
				height 34px
				border 1px solid #4FB859
				padding-left 16px
				right 30px
				border-radius(4px)
		> p
			text-align center
			line-height 36px
		textarea
			width 340px
			height 140px
			margin 0 auto
			display block
			padding 10px
			
.notice
	width 450px
	padding 20px 40px
	border 1px solid #aaa
	text-align center
	color #2EA039
	margin-top 20px !important
	background-color #fafafa
	position relative
	.close
		position absolute
		top 5px
		right 10px
		color #333
		
.product-description
	margin-bottom 10px
	color #333 !important
	p
		margin-bottom 5px
		padding-left 0 !important
	*
		font-size 14px !important
	strong
		padding-right 5px
		
.seo-text
	font-size 12px
	color #333
	h2
		margin 20px 0 10px
		text-align center
	p
		margin 0 0 10px
		line-height 22px
	b
		color #29981F

.seo_text
	width auto !important
	height auto !important
	display block !important
	font-size 12px
	margin-top 100px
	padding 15px
	margin-bottom 30px
	color #58585a
	p
		margin 16px 0
	ul
		padding inherit
		li
			list-style-type inherit
			
#comments
	.otzyv, .response
		margin-bottom 46px
		color #444
		.header
			border 1px solid #AFAFAF
			border-width 1px 1px 0
			font-style italic
			font-size 17px
			padding 16px
			background-color #E8E8E8
			font-weight bold
			border-radius(8px 8px 0 0)
		.body
			border 1px solid #AFAFAF
			border-width 0 1px 1px
			padding 0 16px 16px
			font-size 15px
			line-height 21px
			background-color #E8E8E8
			border-radius(0 0 8px 8px)
		.bottom
			color #4DB865
			*
				font-style italic
		.name
			position relative
			margin-left 15px
			margin-top -1px
			padding 10px 0 0 15px
			float left
		.date
			float right
			padding 9px 3px 0 0
		.quote
			width 12px
			height 18px
			position absolute
			top 0
			left 0
			background-image url('/assets/otzyv.png')
	.response
		position relative
		margin 60px 46px 46px
		.quote
			background-image url('/assets/otzyv-up.png')
			left 15px
			top -17px
			
.home
	padding-top:30px;
	> table
		td
			vertical-align top
			div
				transition(.3s);	
			span
				display block
			a img
				border 1px solid #7E7975
			.hover
				filter unquote("progid:DXImageTransform.Microsoft.Alpha(opacity=0)")
				-moz-opacity 0
				-khtml-opacity 0
				opacity 0
				position absolute
				background-color #FFFFFF
				table
					position relative
					height 365px
					width 100%
					border-spacing 0
					border-top 1px solid #DCDBDB
					border-right 1px solid #DCDBDB
