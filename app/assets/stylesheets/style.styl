#dark
	position fixed
	top 0
	left 0
	height 100%
	width 100%
	z-index 100
	display none
	color #333
	.bg
		display block
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		background -webkit-radial-gradient(transparent, rgba(0, 0, 0, .6));
		background radial-gradient(transparent, rgba(0, 0, 0, .6));
	> div
		display none
		position absolute
		top 50%
		left 50%
		background-color white
		box-shadow(2px 4px 16px #333)
		.header
			line-height 32px
			border 1px solid #aaa
			border-width 1px 0
			background-color #fffdad
			font-weight bold
			text-align center
	.otzyv
		margin-top -225px
		margin-left -225px
		width 450px
		height 450px
		.title
			font-size 24px
			color #4FB859
			line-height 48px
			font-weight bold
			text-align center
			margin-bottom 5px
		label
			display block
			margin-bottom 10px
			height 36px
			p
				position absolute
				left 30px
				line-height 36px
			input
				position absolute
				height 34px
				border 1px solid #4FB859
				padding-left 16px
				right 30px
				border-radius(4px)
		> p
			text-align center
			line-height 36px
		textarea
			width 340px
			height 140px
			margin 0 auto
			display block
			padding 10px
			
