						height 50%
						width 100%
						td
							height 50%
							width 20%
							border-left 1px solid #DCDBDB
							border-bottom 1px solid #DCDBDB
							a
								display block
								height 100%
								color #59595B
								text-align center
								position relative
								img
									height 105px
									border 0
									position relative
									top 50%
									margin-top -55px
									box-shadow(none)
								.name
									font-size 15px
									padding 12px 0
									font-weight bold
									position absolute
									top 0
								p
									position absolute
									bottom 8px
									width 100%
							.showAll
								color #469134
								text-decoration underline
								padding-top 26%
								font-size 15px
								line-height 20px
								b
									text-decoration underline
									color white
			.margin
				margin-left 21px
			.wide
				height 365px
				width 998px
			  	border 1px solid #7E7975
			  	margin-bottom 30px
				td
					width 20%
				.showAll
					padding-top 34%
			.wide + span img
				height 367px
				width 1000px
		td:hover
			.hover, a img
				box-shadow(0 0 10px 0 #aaa)
			.hover				
				filter unquote("progid:DXImageTransform.Microsoft.Alpha(opacity=100)")
				filter unquote("alpha(opacity=100)")
				-moz-opacity 1
				-khtml-opacity 1
				opacity 1
	.banners.second, .banners.third
		height 325px
		width 650px
		margin-bottom 30px
		overflow hidden
		.label
			height 48px
			line-height 48px
			padding 0 20px
			color white
			font-weight bold
			font-size 26px
			background-color #4FB859
			position absolute
			top 16px
			right 0
			z-index 1
			border-radius(0)
		.wrap
			width 10000px
			height 100%
			white-space nowrap
			position relative
			font-size 0
			left 0
			transition(none)
			a
				display inline-block
				width 650px
				height 100%
				background-size cover
		.wrap.slide
			left -650px
			transition(1s)
			
.show
	margin-left 30px
	
	.page-title
		font-size 20px
		font-weight normal
		line-height 20px
		margin 10px
		vertical-align middle
		display inline-block
		img
			position relative
			top 2px
			width 58px
			height 17px
	> .main
		font-size 0
		> div
			display inline-block
			vertical-align top
			position relative
		> :first-child
			.mini
				padding 23px 11px
				width 472px
				overflow hidden
				position relative
				.prev, .next
					width 8px
					height 100%
					position absolute
					top 0
					background-color white
					background-repeat no-repeat
					background-position center
					cursor pointer
					z-index 1
				.prev
					left 0
					background-image url('/assets/productMiniPrev.png')
				.next
					right 0
					background-image url('/assets/productMiniNext.png')
				.wrap
					width 10000px
					font-size 0
					position relative
					left 0
					div
						display inline-block
						border 1px solid #ccc
