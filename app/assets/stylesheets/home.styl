@import 'mixins'

#home
	a, .slick-slide, .slick-arrow
		&:focus
			outline none

	.main-slider
		border 1px solid #7e7975
		margin 28px 50px 0
		img
			width 100%
		@media (max-width 700px)
			margin 28px 0 0

	.slick-dots
		text-align center
		position absolute
		left 0
		right 0
		bottom 0
		li
			display inline-block
			margin 0 4px
			height 28px
		button
			display block
			margin-top 9px
			border 0
			font-size 0
			width 10px
			height 10px
			background-color #aaa
			cursor pointer
			border-radius(5px)
			box-shadow(inset 0 0 4px black)
			transition(.5s)
			&:focus
				outline none
		.slick-active button
			background #81c0eb
			
	.icons
		display table
		width 100%
		background white
		font-size 0
		padding 75px 3% 0
		box-sizing border-box
		> a
			text-align center
			display table-cell
			width 16.66%
			padding-bottom 22px
		img
			max-width 114px
		p
			text-align center
			font-size 1.1rem
			padding-top 43px
			
	h2
		text-align center
		font-size 34px
		color black
		font-weight normal
		padding 26px 0 46px
	.categories
		padding-bottom 57px
		a
			text-align center
			width 402px
		img
			border 1px solid #808080
			display inline-block
			width 400px
			height 400px
	.comments
		background #e8e8e8
		color black
		h2
			padding 26px 0 35px
		.slick-arrow
			background #e8e8e8
	.reviews
		padding-bottom 20px
		margin 0 32px
		.slick-arrow
			bottom auto
			height 124px
		.item
			width 436px
			padding 0 34px
			margin 0 80px
		.text
			margin-bottom 20px
			position relative
			font-size 15px
			&:before, &:after
				display block
				position absolute
				font-size 40px
				color #a1a1a1
				line-height 1
			&:before
				content '«'
				left -30px
				top -14px
			&:after
				content '»'
				bottom 0
				right -30px
		.author, .date
			color #5f5f5f
			font-size 13px
			font-style italic
		.date
			float right
		
	.slick-arrow
		position absolute
		top 0
		bottom 0
		background white
		width 50px
		padding 0
		border 0
		font-size 0
		z-index 5
		&:before
			content ''
			display block
			position absolute
			top 50%
			width 20px
			height 49px
			margin-top -35px
	.slick-prev
		left 0
		&:before
			left 17px
			background url('/assets/arrow-left-dark.png')
	.slick-next
		right 0
		&:before
			right 17px
			background url('/assets/arrow-right-dark.png')
			
	.white
		.slick-arrow
			background white
			&:before
				margin-top -60px
		.slick-prev:before
			background url('/assets/arrow-left-dark.png')
		.slick-next:before
			background url('/assets/arrow-right-dark.png')
			
	@media (max-width 1400px)
		.categories
			img
				width 300px
				height 300px
		.reviews .item
			margin 0 40px
			
	@media (max-width 1100px)
		.reviews .item
			margin 0 20px
		.categories
			img
				width 200px
				height 200px
			
	@media (max-width 1000px)
		.icons
			padding 24px 35px
			a
				margin 0
				padding 0 5px
				width 15%
				vertical-align top
			img
				width 48px
			p
				padding-top 12px
				font-size .8rem
			
	@media (max-width 800px)
		.categories
			img
				width 250px
				height 250px
			
	@media (max-width 675px)
		.categories
			img
				width 200px
				height 200px
			
	@media (max-width 575px)
		.categories
			img
				width 250px
				height 250px
				
	#info
		background #fff
		padding 0 3.3%
		font-size 14px
		h1, h2, h3
			font-size 16px
		p
			margin-bottom 25px
			&:last-child
				margin-bottom 20px

#mobileTitle
	display none
	background #888888
	color white
	font-weight bold
	font-size 1.1rem
	line-height 1
	text-align center
	padding 19px 0 20px
	text-transform uppercase

@media (max-width 950px)
	#mobileTitle
		display block