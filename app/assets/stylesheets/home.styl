@import 'admin/mixins'

#home
	padding-bottom 40px
	> .row
		margin-top 30px
	.link
		unquote('-ms-filter "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)"')
		unquote('filter alpha(opacity=100)')
		-khtml-opacity 1
		-moz-opacity 1
		opacity 1
		cursor pointer
		font-size 0
		transition(.3s)
	.link:hover
		unquote('-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=75)"')
		unquote('filter: alpha(opacity=75)')
		-khtml-opacity 0.75
		-moz-opacity 0.75
		opacity 0.75
		box-shadow(0 0 10px 0 #aaa)
	.container
		height 325px
		img
			position absolute
			width 650px
			height 325px
			transition(.3s)
		.items
			background-color white
			position absolute
			width 650px
			height 325px
			transition(.3s)
			unquote('-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(opacity=0)"')
			unquote('filter: alpha(opacity=0)')
			-khtml-opacity 0
			-moz-opacity 0
			opacity 0
			.row:first-child
				border-bottom 1px solid #DCDBDB
			.row
				a
					width 216px
					height 162px
					border-left 1px solid #DCDBDB
					position relative
					color: #59595B;
					text-align: center;
					background-repeat: no-repeat;
					background-size: auto 105px;
					background-position: center;
					h2
						font-size 15px
						padding 12px 0
					p
						position absolute
						bottom 8px
						width 100%
				a:first-child
					border-left 0
				.showAll
					color #469134
					text-decoration underline
					font-size 15px
					line-height 20px
					padding-top 57px
					height 105px
					b
						text-decoration underline
						color white
	.container:hover
		.items
			box-shadow(0 0 10px 0 #aaa)
			unquote('-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(opacity=100)"')
			unquote('filter: alpha(opacity=100)')
			-khtml-opacity 1
			-moz-opacity 1
			opacity 1
	.two
		width 650px
	.one:first-child, .two:first-child
		padding-right 25px