@import 'mixins'

#home
	a, .slick-slide, .slick-arrow
		&:focus
			outline none

	.main-slider
		border 1px solid #7e7975
		margin 28px 30px 26px
		img
			width 100%

	.slick-dots
		text-align center
		position absolute
		left 0
		right 0
		bottom 0
		li
			display inline-block
			margin 0 4px
			height 28px
		button
			display block
			margin-top 9px
			border 0
			font-size 0
			width 10px
			height 10px
			background-color #aaa
			cursor pointer
			border-radius(5px)
			box-shadow(inset 0 0 4px black)
			transition(.5s)
			&:focus
				outline none
		.slick-active button
			background #81c0eb
			
	.icons
		background white
		text-align justify
		font-size 0
		padding 24px 35px 0
		&:after
			content ''
			display inline-block
			width 100%
		> div
			display inline-block
			margin-bottom 22px
		img
			width 150px
		p
			text-align center
			font-size 1rem
			padding-top 32px
			
	h2
		text-align center
		font-size 32px
		color white
		font-weight normal
		padding 45px 0 48px
	.categories
		padding-bottom 50px
		a
			text-align center
		img
			display inline-block
			width 400px
			height 400px
	.white
		background white
		color black
		h2
			color black
	.reviews
		padding-bottom 35px
		.item
			width 436px
			padding 0 32px
			margin 0 80px
		.text
			margin-bottom 20px
			position relative
			&:before, &:after
				display block
				position absolute
				font-size 2rem
				color #a1a1a1
				line-height 1
			&:before
				content '«'
				left -45px
				top -9px
			&:after
				content '»'
				bottom 0
				right -20px
		.author, .date
			color #5f5f5f
			font-style italic
		.date
			float right
			
	.info
		background #a0a0a0
		color #373737
		line-height 25px
		padding 13px 0
		text-align center
		font-size .8rem
		
	.slick-arrow
		position absolute
		top 0
		bottom 0
		background #463F39
		width 50px
		padding 0
		border 0
		font-size 0
		z-index 5
		&:before
			content ''
			display block
			position absolute
			top 50%
			width 20px
			height 49px
			margin-top -35px
	.slick-prev
		left 0
		&:before
			left 17px
			background url('/assets/arrow-left-light.png')
	.slick-next
		right 0
		&:before
			right 17px
			background url('/assets/arrow-right-light.png')
			
	.white
		.slick-arrow
			background white
			&:before
				margin-top -60px
		.slick-prev:before
			background url('/assets/arrow-left-dark.png')
		.slick-next:before
			background url('/assets/arrow-right-dark.png')
			
	@media (max-width 1400px)
		.categories
			img
				width 300px
				height 300px
		.reviews .item
			margin 0 40px
			
	@media (max-width 1100px)
		.categories
			img
				width 250px
				height 250px
		.reviews .item
			margin 0 20px
			
	@media (max-width 1100px)
		.categories
			img
				width 200px
				height 200px
			
	@media (max-width 950px)
		.icons
			img
				width 120px
				height 120px
				margin 0px 12px
			p
				padding-top 12px
				font-size .9rem
			
	@media (max-width 810px)
		.icons
			div
				text-align center
			img
				width 90px
				height 90px
			p
				padding-top 5px
				font-size .8rem
			
	@media (max-width 800px)
		.categories
			img
				width 250px
				height 250px
			
	@media (max-width 675px)
		.categories
			img
				width 200px
				height 200px
		.icons
			padding 24px 10px
			text-align center
			div
				margin 5px 10px
				width 90px
				text-align center
				vertical-align top
			img
				margin 0
			
	@media (max-width 575px)
		.categories
			img
				width 250px
				height 250px
				
	#info
		color #fefef9
		padding 0 4% 20px
		font-size 14px
		h1, h2, h3
			font-size 24px
		p
			margin-bottom 20px